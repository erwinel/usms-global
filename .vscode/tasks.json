{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Util",
                "Transpile Scripts"
            ],
            "group": "build"
        },
        {
            "label": "Build Util",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/util/src/usms-global.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Transpile Scripts",
            "type": "typescript",
            "tsconfig": "src/tsconfig.json",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/util/src/usms-global.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/util/src/SnTsTypeGenerator/SnTsTypeGenerator.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}